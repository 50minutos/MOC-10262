<Window x:Class="_008_CapsJoins.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="1000" Width="1000">
    <Canvas>
        <Polyline Stroke="Blue" StrokeThickness="15" Points="10,150 30,140 50,160 70,130 90,170 110,120 130,180 150,110 170,190 190,100 210,240" StrokeEndLineCap="Flat" StrokeStartLineCap="Flat"></Polyline>
        <Polyline Stroke="Red" Canvas.Left="200" StrokeThickness="15" Points="10,150 30,140 50,160 70,130 90,170 110,120 130,180 150,110 170,190 190,100 210,240" StrokeEndLineCap="Round" StrokeStartLineCap="Round"></Polyline>
        <Polyline Stroke="Black" Canvas.Left="400" StrokeThickness="15" Points="10,150 30,140 50,160 70,130 90,170 110,120 130,180 150,110 170,190 190,100 210,240" StrokeEndLineCap="Square" StrokeStartLineCap="Square"></Polyline>
        <Polyline Stroke="DarkGreen" Canvas.Left="600" StrokeThickness="15" Points="10,150 30,140 50,160 70,130 90,170 110,120 130,180 150,110 170,190 190,100 210,240" StrokeEndLineCap="Triangle" StrokeStartLineCap="Triangle"></Polyline>

        <Polyline Stroke="DarkGoldenrod" Canvas.Top="200" Canvas.Left="200" StrokeThickness="15" Points="10,150 30,140 50,160 70,130 90,170 110,120 130,180 150,110 170,190 190,100 210,240" StrokeLineJoin="Miter"></Polyline>
        <Polyline Stroke="DarkBlue" Canvas.Top="200" StrokeThickness="15" Points="10,150 30,140 50,160 70,130 90,170 110,120 130,180 150,110 170,190 190,100 210,240" StrokeLineJoin="Bevel"></Polyline>
        <Polyline Stroke="DarkMagenta" Canvas.Top="200" Canvas.Left="400" StrokeThickness="3" Points="10,150 30,140 50,160 70,130 90,170 110,120 130,180 150,110 170,190 190,100 210,240" StrokeLineJoin="Round"></Polyline>

        <Line Stroke="Black" Canvas.Top="500" StrokeThickness="5" X1="0" Y1="0" X2="100" Y2="100" StrokeDashArray="1 2"></Line>
        <Line Stroke="Black" Canvas.Top="500" Canvas.Left="200" StrokeThickness="5" X1="0" Y1="0" X2="100" Y2="100" StrokeDashArray="2 1"></Line>
        <Line Stroke="Black" Canvas.Top="500" Canvas.Left="400" StrokeThickness="5" X1="0" Y1="0" X2="100" Y2="100" StrokeDashArray="1 1 2 1"></Line>
        <Line Stroke="Black" Canvas.Top="500" Canvas.Left="600" StrokeThickness="5" X1="0" Y1="0" X2="100" Y2="100" StrokeDashArray="1 2 1 4"></Line>
    </Canvas>
</Window>
