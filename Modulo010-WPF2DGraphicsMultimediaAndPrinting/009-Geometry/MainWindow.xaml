<Window x:Class="_009_Geometry.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Canvas>
        <Rectangle Fill="Yellow" Stroke="Blue" Width="100" Height="50"></Rectangle>
        <Path Fill="Yellow" Stroke="Blue">
            <Path.Data>
                <RectangleGeometry Rect="150,0 100,50"></RectangleGeometry>
            </Path.Data>
        </Path>

        <Line Stroke="Blue" X1="300" Y1="0" X2="400" Y2="100"></Line>
        <Path Stroke="Blue">
            <Path.Data>
                <LineGeometry StartPoint="350,0" EndPoint="450,100"></LineGeometry>
            </Path.Data>
        </Path>

        <Ellipse Fill="Yellow" Stroke="Blue" Canvas.Top="150" Width="100" Height="50"></Ellipse>
        <Path Fill="Yellow" Stroke="Blue">
            <Path.Data>
                <EllipseGeometry RadiusX="50" RadiusY="25" Center="200,175"></EllipseGeometry>
            </Path.Data>
        </Path>
    </Canvas>
</Window>
