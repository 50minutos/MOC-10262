<Window x:Class="_014_Reflection.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <StackPanel>
        <Image Source="logo.jpg" Width="100" Height="108"></Image>
        <Image Source="logo.jpg" Width="100" Height="108" RenderTransformOrigin="0, 0.5">
            <Image.RenderTransform>
                <ScaleTransform ScaleY="-0.8"></ScaleTransform>
            </Image.RenderTransform>
            <Image.OpacityMask>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Offset="0" Color="Transparent"></GradientStop>
                    <GradientStop Offset="1" Color="#66000000"></GradientStop>
                </LinearGradientBrush>
            </Image.OpacityMask>
        </Image>
    </StackPanel>
</Window>
