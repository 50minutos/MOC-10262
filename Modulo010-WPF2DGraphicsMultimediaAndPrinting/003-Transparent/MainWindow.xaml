<Window x:Class="_003_Transparent.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid>
            <Grid.Background>
                <ImageBrush ImageSource="imagem.png" AlignmentX="Center" AlignmentY="Center"></ImageBrush>
            </Grid.Background>
            <Button Name="button1" Click="button1_Click" HorizontalAlignment="Center" VerticalAlignment="Center" Padding="50" BorderBrush="Transparent" BorderThickness="0">
                <Button.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="Transparent" Offset="0.2"></GradientStop>
                        <GradientStop Color="Yellow" Offset="0.8"></GradientStop>
                    </LinearGradientBrush>
                </Button.Background>
                clique aqui
            </Button>
        </Grid>
    </Grid>
</Window>
