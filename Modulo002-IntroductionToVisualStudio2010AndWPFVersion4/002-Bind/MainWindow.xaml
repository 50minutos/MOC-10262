<Window x:Class="_002_Bind.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Slider Minimum="100" Maximum="800" Value="450" VerticalAlignment="Top" Name="Tamanho"></Slider>
        <Image VerticalAlignment="Center" Source="imagem.png" Width="{Binding ElementName=Tamanho, Path=Value}"></Image> 
    </Grid>
</Window>
