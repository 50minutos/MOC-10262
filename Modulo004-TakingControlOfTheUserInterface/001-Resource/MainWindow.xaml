<Window x:Class="_001_Resource.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525" Loaded="Window_Loaded">
    <Window.Resources>
        <SolidColorBrush x:Key="blueBrush" Color="DarkBlue" />
        <SolidColorBrush x:Key="whiteBrush" Color="White" />
        <SolidColorBrush x:Key="grayBrush" Color="Gray" />
    </Window.Resources>
    <StackPanel Background="{StaticResource ResourceKey=grayBrush}">
        <Button Name="B1" Foreground="{StaticResource ResourceKey=whiteBrush}" Background="{StaticResource ResourceKey=blueBrush}" Margin="10">Clique aqui</Button>
        <Button Name="B2" Foreground="{StaticResource ResourceKey=blueBrush}" Background="{StaticResource ResourceKey=whiteBrush}" Margin="10">Clique aqui</Button>
        <Button Name="B3" Margin="10">Clique aqui</Button>
        <Button Name="B4" Margin="10">Clique aqui</Button>
        <Button Name="B5" Margin="10">Clique aqui</Button>
    </StackPanel>
</Window>
